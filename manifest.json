{
    "manifest_version": 2
    , "name": "event-logger"
    , "version": "0.1"
    , "description": "log events while browsing"
    , "applications": {
        "gecko": {
           "id": "event-logger@example.com"
        }
    }

    , "icons": {
        "48": "icons/border-48.png"
    }
    , "permissions": [
        "downloads"
    ]
    , "background": {
        "scripts": ["background_script.js"]
    }
    , "content_scripts": [
        {
            "matches": ["<all_urls>"]
            , "js": ["content_script.js"]
        }
    ]
}
