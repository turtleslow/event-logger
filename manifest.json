{
    "manifest_version": 2
    , "name": "event-logger"
    , "version": "0.1.1"
    , "description": "log events while browsing"
    , "applications": {
        "gecko": {
           "id": "event-logger@example.com"
        }
    }
    , "icons": {
        "48": "icons/border-48.png"
    }
    , "permissions": [
        "<all_urls>"
        , "downloads"
        , "notifications"
        , "storage"
        , "tabs"
        , "webNavigation"
    ]
    , "background": {
        "page": "background_script.html"
    }
    , "options_ui": {
        "page": "options_launcher.html"
        , "browser_style": true
    }
    , "page_action": {
        "default_icon": {
            "19": "icons/border-19.png"
            , "38": "icons/border-38.png"
        }
        , "default_title": "event-logger"
        , "default_popup": "page_action.html"
    }
}
