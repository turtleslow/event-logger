{
    "manifest_version": 2
    , "name": "event-logger"
    , "version": "0.1.1"
    , "description": "log events while browsing"
    , "applications": {
        "gecko": {
           "id": "event-logger@example.com"
        }
    }

    , "icons": {
        "48": "icons/border-48.png"
    }
    , "permissions": [
        "<all_urls>"
        , "downloads"
        , "history"
        , "storage"
        , "tabs"
    ]
    , "options_ui": {
        "page": "options_launcher.html"
        , "browser_style": true
    }
    , "background": {
        "page": "background_script.html"
    }
}
